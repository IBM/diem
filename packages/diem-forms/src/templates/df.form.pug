form(
  [attr.id]="formSpecs.id",
  [formGroup]='form',
  [class]='formSpecs.style.formClass',
  [ngSwitch]='true')
    span.cds--loading--title(*ngIf='! loaded')
        .cds--loading.cds--loading--small
            svg.cds--loading__svg(viewBox="-75 -75 150 150")
                title Loading...
                circle.cds--loading__stroke(cx="0", cy="0", r="37.5")
        span Loading...

    ng-template([ngIf]="loaded && formSpecs.style && formSpecs.style.type")

        df-group(
            *ngSwitchCase="['basic','fieldset'].includes(formSpecs.style.type)",
            [TimeCheck]='TimeCheck',
            [formSpecs]='formSpecs',
            [form]='form',
            [questionGroups]='questionGroups',
            )

        df-panel(
            *ngSwitchCase="formSpecs.style.type === 'panelset'",
            [TimeCheck]='TimeCheck',
            [formSpecs]='formSpecs',
            [form]='form',
            [questionGroups]='questionGroups',
            )

        df-fieldset-group(
            *ngSwitchCase="['fieldsetgroup', 'boxgroup','basicgroup'].includes(formSpecs.style.type)",
            [TimeCheck]='TimeCheck',
            [formSpecs]='formSpecs',
            [form]='form',
            [questionGroups]='questionGroups',
            )
