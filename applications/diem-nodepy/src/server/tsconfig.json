{
    "extends": "../webpack/tsconfig.base.json",
    "compilerOptions": {
        "outDir": "../../server",
        "resolveJsonModule": true,
        "typeRoots": ["../../node_modules/@types"],
        "baseUrl": "./",
        "paths": {
            "@common/*": ["./common/*"],
            "@interfaces": ["./interfaces/"],
            "@config/*": ["./config/*"],
            "@shared/*": ["./routes/shared/*"]
        }
    },
    "filesGlob": ["../../node_modules/@types/***/**.d.ts", "**/**.ts"]
}
