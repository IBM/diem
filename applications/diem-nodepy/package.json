{
    "name": "diem-nodepy",
    "version": "5.0.0",
    "description": "ETL- Manager NodePy",
    "config": {
        "appname": "diem-nodepy",
        "appcookie": "diem-nodepy",
        "containername": "127.0.0.1:30500/bizops/nodepy",
        "containernameprod": "us.icr.io/bizopstest/nodepy"
    },
    "dependencies": {
        "core-js": "^3.9.1",
        "helmet": "^4.4.1",
        "jsonwebtoken": "^8.5.1",
        "moment": "^2.29.1",
        "nats": "^2.0.1",
        "prettier": "^2.2.1",
        "print-hrtime": "^2.0.0",
        "rimraf": "^3.0.2",
        "save-dev": "^0.0.1-security"
    },
    "keywords": [
        "node",
        "python"
    ],
    "devDependencies": {
        "@types/core-js": "^2.5.4",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/node": "^14.14.37",
        "@types/rimraf": "^3.0.0",
        "@types/webpack": "^5.0.0",
        "@types/webpack-env": "^1.16.0",
        "@typescript-eslint/eslint-plugin": "^4.19.0",
        "@typescript-eslint/parser": "^4.19.0",
        "eslint": "^7.23.0",
        "eslint-config-prettier": "^8.0.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsdoc": "^32.3.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-sonarjs": "^0.6.0",
        "fork-ts-checker-webpack-plugin": "^6.2.0",
        "nodemon-webpack-plugin": "^4.5.2",
        "npm-run-all": "^4.1.5",
        "pug-loader": "^2.4.0",
        "ts-loader": "^8.1.0",
        "typescript": "^4.2.3",
        "typescript-eslint": "0.0.1-alpha.0",
        "webpack": "^5.28.0",
        "webpack-cli": "^4.6.0"
    },
    "scripts": {
        "build": "./node_modules/.bin/npm-run-all lock webpack:server webpack:node",
        "start": "node --max-old-space-size=8192 ./server/server.js",
        "start:cloud": "node --max-old-space-size=2048 ./server/app.mjs",
        "start:local": "node --max-old-space-size=2048 ./server/server.mjs",
        "eslint": "eslint -c ./src/server/.eslintrc.js ./src/server/ --ext .ts",
        "docker:push": "docker push $npm_package_config_containername",
        "docker:build": "docker build -t $npm_package_config_containername -f docker/Dockerfile .",
        "docker:build.local": "docker build -t $npm_package_config_containername -f docker/Dockerfile.local .",
        "docker:push-prod": "docker push $npm_package_config_containernameprod",
        "docker:build-prod": "docker build -t $npm_package_config_containernameprod -f docker/Dockerfile .",
        "kube:local-prod": "./node_modules/.bin/npm-run-all build docker:build docker:push",
        "kube:prod": "./node_modules/.bin/npm-run-all build docker:build-prod docker:push-prod",
        "build-webpack": "rm -rf ./src/webpack/lib && ./node_modules/.bin/tsc -p ./src/webpack/tsconfig.json",
        "webpack:node": "webpackenv=node webpack --mode production",
        "webpack:node-test": "webpackenv=node-test webpack -w --mode development",
        "lock": "npm install --package-lock",
        "kube:init": "node ../../common/k8s/init",
        "cpdir": "cp -r ../../packages/diem-lib/dist/  ./local/"
    }
}
