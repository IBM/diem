{
    "name": "diem-slack-bot",
    "description": "Diem Data Integration Engine Multipurpose",
    "version": "1.10.0",
    "author": "guy_huinen@be.ibm.com",
    "config": {
        "appname": "Diem Help",
        "sitename": "diem-slack-bot",
        "containername": "127.0.0.1:30500/bizops/diem-slack-bot",
        "appcookie": "diem-slack-bot",
        "apppath": "/diem-slack-bot"
    },
    "dependencies": {
        "axios": "^0.24.0",
        "cookie-parser": "^1.4.6",
        "express": "^4.17.2",
        "express-rate-limit": "^5.5.1",
        "helmet": "^4.6.0",
        "moment": "^2.29.1",
        "nocache": "^3.0.1",
        "print-hrtime": "^2.0.0",
        "pug": "^3.0.2",
        "tsscmp": "^1.0.6",
        "yaml": "^1.10.2"
    },
    "devDependencies": {
        "@types/cookie-parser": "^1.4.2",
        "@types/express": "^4.17.13",
        "@types/express-rate-limit": "^5.1.3",
        "@types/node": "^17.0.2",
        "@types/terser-webpack-plugin": "^5.2.0",
        "@types/tsscmp": "^1.0.0",
        "@types/webpack": "^5.28.0",
        "@typescript-eslint/eslint-plugin": "^5.8.0",
        "@typescript-eslint/parser": "^5.8.0",
        "cross-env": "^7.0.3",
        "depcheck": "^1.4.2",
        "eslint": "^8.5.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jsdoc": "^37.4.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-sonarjs": "^0.11.0",
        "fork-ts-checker-webpack-plugin": "^6.5.0",
        "nodemon-webpack-plugin": "^4.7.0",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.5.1",
        "terser-webpack-plugin": "^5.3.0",
        "ts-loader": "^9.2.6",
        "typescript": "^4.5.4",
        "webpack": "^5.65.0",
        "webpack-cli": "^4.9.1"
    },
    "keywords": [
        "diem"
    ],
    "license": "ISC",
    "private": true,
    "scripts": {
        "build": "./node_modules/.bin/npm-run-all clean lock webpack:build webpack:node",
        "clean": "rimraf server",
        "docker:build": "docker build -t $npm_package_config_containername -f docker/Dockerfile .",
        "docker:build-local": "docker build -t $npm_package_config_containername -f docker/Dockerfile.local .",
        "docker:build-production": "docker build -t $npm_package_config_containernameprod -f docker/Dockerfile .",
        "docker:push": "docker push $npm_package_config_containername",
        "docker:push-production": "docker push $npm_package_config_containernameprod",
        "kube:local": "./node_modules/.bin/npm-run-all build docker:build docker:push",
        "kube:local-n": "./node_modules/.bin/npm-run-all webpack:node docker:build docker:push",
        "kube:local-d": "./node_modules/.bin/npm-run-all docker:build docker:push",
        "lock": "npm install --package-lock",
        "start": "node ./server/server.js",
        "webpack:build": "rm -rf ./src/webpack/lib && ./node_modules/.bin/tsc -p ./src/webpack/tsconfig.json",
        "webpack:node": "webpackenv=node webpack  --mode production",
        "webpack:node-local": "cross-env webpackenv=node-local webpack -w   --progress --mode development",
        "webpack:node-test": "cross-env webpackenv=node-test webpack -w   --progress --mode development",
        "eslint": "eslint -c ./src/server/.eslintrc.js ./src/server/ --ext .ts",
        "eslint-fix": "eslint -c ./src/server/.eslintrc.js ./src/server/ --fix --ext .ts",
        "depcheck": "npx depcheck . --specials=bin,eslint,tslint,ttypescript,webpack,prettier "
    }
}
