        "serialize-error": "^8.1.0"
    },
    "devDependencies": {
        "@types/byline": "^4.2.31",
        "@types/core-js": "^2.5.4",
        "@types/js-yaml": "^4.0.0",
        "@types/node": "^14.14.41",
        "@types/rimraf": "^3.0.0",
        "@types/webpack": "^5.28.0",
        "@types/webpack-env": "^1.16.0",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
